<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="admin/tool/gradefilter/db" VERSION="20240821" COMMENT="XMLDB file for Moodle admin/tool/gradefilter"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="tool_gradefilter_bonuses" COMMENT="Stores bonus grades">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="itemid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="itemid" TYPE="foreign-unique" FIELDS="itemid" REFTABLE="grade_items" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="tool_gradefilter_bonuses_ex" COMMENT="Excluded bonus grades">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="bgid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="bonus grade id"/>
        <FIELD NAME="reasongradeid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="The grade that caused the bonus to be excluded"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="bgid" TYPE="foreign" FIELDS="bgid" REFTABLE="tool_gradefilter_bonuses" REFFIELDS="id"/>
        <KEY NAME="reasongradeid" TYPE="foreign-unique" FIELDS="reasongradeid" REFTABLE="grade_grades" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
